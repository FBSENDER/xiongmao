- path(@path)
- h1("黑白装饰画")

= @content.html_safe

%section.product-list.wrapper
  %h2{style: "font-size:18px;color:#555;padding: 20px 20px 10px 20px;background-color: #fff;"}
    黑白装饰画大全
    %span{style: "float:right;"}
      %a{href: "/zxgt/", title: "选购装饰画"} 去选购
  %hr

  - (15..29).each do |row|
    .product-row
      - (0..1).each do |col|
        .product-box
          %a{href: "/zp/#{@items[row * 2 + col].id}/"}
            %img{src: "#{@items[row * 2 + col].mainPic}", alt: "#{@items[row * 2 + col].desc + @items[row * 2 + col].dtitle}"}
          %p.title
            %a{href: "/zp/#{@items[row * 2 + col].id}/"} #{@items[row * 2 + col].dtitle}

.wrapper
  - @tags[0,10].each_with_index do |tag, index|
    %h2{style: "font-size:18px;color:#555;padding: 20px 20px 10px 20px;"} 
      %a{href: "#{tag[:link]}"} #{tag[:name]}装饰画
    %hr
    %section.xgt-x3-area
      - @items[index * 3, 3].each do |item|
        .pic
          %a{href: "/zp/#{item.id}/"}
            %img{src: "#{item.mainPic}", alt: "#{item.dtitle}图片"}



.wrapper
  %section.c-list
    %h2{style: "font-size:18px;color:#555;padding: 20px 20px 10px 20px;"} 
      %a{href: "/zxgt/"}更多装饰画分类
    %hr
    %div
      - @tags[10,20].each do |tag|
        %a{href: "#{tag[:link]}", title: "#{tag[:name]}装饰画", style: "color: #555;"} #{tag[:name]}
  %section.c-list
    %h2{style: "font-size:18px;color:#555;padding: 20px 20px 10px 20px;"} 装饰画商家推荐
    %hr
    - @shops.each do |s|
      .comment
        .avatar-area
          %a{href: "/zs/#{s.id}/"}
            %img{src: "#{s.shopLogo}"}
        %p.desc{style: "line-height: 60px;font-size: 18px;color: #555;font-weight: 600;"}
          %a{href: "/zs/#{s.id}/"} #{s.shopName}

= render partial: "layouts/home_footer"
